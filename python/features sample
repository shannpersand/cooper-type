feature smcp {
    sub @smallcaps_source by @smallcaps_target;
    } smcp;

    feature liga {
    sub f f i by f_f_i;
    sub f f by f_f;
    } liga;

feature calt {
    sub p' o' o' h e a d by u1F4A9;
    sub [P p]' o' o' head by ____
    } calt;

feature kern {
    pos A V -100;
} kern;

feature kern {
    pos A V <0 -100 0 0>;
    # <movement_x movement_y adjustment_x adjustment_y>
} kern;